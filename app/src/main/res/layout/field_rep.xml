<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:weightSum="10"
    >
    <net.igenius.customcheckbox.CustomCheckBox
        android:id="@+id/customCheckBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="3dp"
        app:color_checked="@color/colorCheckBoxChecked"
        app:color_tick="@color/white"
        app:color_unchecked_stroke="@color/colorCheckBoxChecked"
        app:small_tick="false" />
    <TextView
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:id="@+id/repair_text_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"/>

    <TextView
        android:gravity="center_vertical|right"
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:id="@+id/repair_text_price"
        android:textColor="@color/colorCheckBoxUnchecked"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

</LinearLayout>